<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SofaScoreAcademy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/surface_0</item>
        <item name="colorPrimaryVariant">@color/surface_2</item>
        <item name="colorOnPrimary">@color/tint_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/surface_1</item>
        <item name="colorSecondaryVariant">@color/surface_2</item>
        <item name="colorOnSecondary">@color/tint_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="Theme.SofaScoreAcademy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SofaScoreAcademy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SofaScoreAcademy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>